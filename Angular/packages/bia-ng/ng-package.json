{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../dist/bia-ng",
  "deleteDestPath": true,
  "lib": {
    "entryFile": "src/public-api.ts"
  },
  "assets": [
    { "input": "scss", "glob": "**/*.scss", "output": "styles" },
    { "input": "fonts", "glob": "**/*", "output": "fonts" },
    {
      "input": "shared",
      "glob": "**/*.html",
      "output": "templates"
    },
    {
      "input": "shared",
      "glob": "**/*.scss",
      "output": "templates"
    }
  ]
}
