{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../dist/biang",
  "deleteDestPath": true,
  "lib": {
    "entryFile": "src/public-api.ts"
  },
  "assets": [
    { "input": "scss", "glob": "**/*.scss", "output": "styles" },
    {
      "input": "shared/components/table",
      "glob": "**/*.html",
      "output": "templates/table"
    },
    {
      "input": "shared/feature-templates",
      "glob": "**/*.html",
      "output": "templates/feature-templates"
    },
    {
      "input": "shared/components/table",
      "glob": "**/*.scss",
      "output": "templates/table"
    },
    {
      "input": "shared/feature-templates",
      "glob": "**/*.scss",
      "output": "templates/feature-templates"
    }
  ]
}
