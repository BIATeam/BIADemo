{
  "BIADemoApp": {
    "baseAddress": "http://localhost/BIADemo/App",
    "urlWakeUp": "/"
  },
  "BIADemoWebApi": {
    "baseAddress": "http://localhost/BIADemo/WebApi",
    "urlWakeUp": "/api/auth/frontendversion"
  },
  "Project": {
    "Name": "BIADemo",
    "ShortName": "BIADemo"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "System": "Warning",
      "Microsoft": "Warning",
      "Hangfire": "Information"
    }
  },
  "AllowedHosts": "*",
  "NLog": {
    "autoReload": true,
    "internalLogLevel": "Error",
    "internalLogFile": "${basedir}/Logs/internal-nlog.txt",
    "extensions": [
      { "assembly": "NLog.Extensions.Logging" },
      { "assembly": "NLog.Web.AspNetCore" },
      { "assembly": "NLog.MailKit" },
      // use to store logs in Hash
      { "assembly": "NLog.HangfireJobLogsTarget" },
      // use to store logs in separate Files (${hangfire-jobid})
      { "assembly": "NLog.HangfireLayouts" }
    ],
    "default-wrapper": {
      "type": "AsyncWrapper",
      "overflowAction": "Block"
    },
    "targets": {
      "fileLog": {
        "type": "File",
        "fileName": "E:\\Logs\\BIADemo\\${shortdate}_TheBIADevCompany.BIADemo_WorkerService${hangfire-jobid}.log",
        "archiveAboveSize": 10000000,
        "archiveNumbering": "Rolling",
        "archiveEvery": "Day",
        "maxArchiveFiles": 60,
        "layout": "${longdate}|${uppercase:${level}}|${aspnet-traceidentifier}|${message} ${exception:format=tostring}"
      },
      // Log in hangfire hash (database)
      "hangfire_hash": {
        "layout": "${longdate}|${uppercase:${level}}|${aspnet-traceidentifier}|${message} ${exception:format=tostring}${hangfire-decorator}",
        "type": "HangfireJobLogs"
      }
    },
    "rules": [
      {
        "logger": "Microsoft.EntityFrameworkCore.*",
        "finalMinLevel": "Warn"
      },
      {
        "logger": "*",
        "minlevel": "Info",
        "writeTo": "fileLog"
      }
      //{
      //  "logger": "error.mail",
      //  "minlevel": "Error",
      //  "writeTo": "mailLog"
      //}
    ]
  }
}