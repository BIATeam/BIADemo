<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net10.0</TargetFramework>
		<Version>6.0.2</Version>
		<PackageId>BIA.Net.Core</PackageId>
		<Title>BIA.Net Core Framework</Title>
		<Description>BIA.Net Core Framework</Description>
		<Copyright>Copyright Â© BIA 2026</Copyright>
		<PackageLicenseExpression>GPL-3.0-or-later</PackageLicenseExpression>
		<Authors>BIA Team</Authors>
		<Company>BIA</Company>
		<PackageIcon>LogoBIA.png</PackageIcon>
		<PackageIconUrl />
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<IncludeReferencedProjects>true</IncludeReferencedProjects>
		<TargetsForTfmSpecificContentInPackage>_AddReferencedProjectOutputs</TargetsForTfmSpecificContentInPackage>
	</PropertyGroup>

	<ItemGroup>
		<ProjectReference Include="..\BIA.Net.Core.Common\BIA.Net.Core.Common.csproj" PrivateAssets="all" />
		<ProjectReference Include="..\BIA.Net.Core.Domain.Dto\BIA.Net.Core.Domain.Dto.csproj" PrivateAssets="all" />
		<ProjectReference Include="..\BIA.Net.Core.Domain\BIA.Net.Core.Domain.csproj" PrivateAssets="all" />
		<ProjectReference Include="..\BIA.Net.Core.Application\BIA.Net.Core.Application.csproj" PrivateAssets="all" />
		<ProjectReference Include="..\BIA.Net.Core.Infrastructure.Data\BIA.Net.Core.Infrastructure.Data.csproj" PrivateAssets="all" />
		<ProjectReference Include="..\BIA.Net.Core.Infrastructure.Service\BIA.Net.Core.Infrastructure.Service.csproj" PrivateAssets="all" />
		<ProjectReference Include="..\BIA.Net.Core.Ioc\BIA.Net.Core.Ioc.csproj" PrivateAssets="all" />
		<ProjectReference Include="..\BIA.Net.Core.Presentation.Common\BIA.Net.Core.Presentation.Common.csproj" PrivateAssets="all" />
		<ProjectReference Include="..\BIA.Net.Core.Presentation.Api\BIA.Net.Core.Presentation.Api.csproj" PrivateAssets="all" />
		<ProjectReference Include="..\BIA.Net.Core.WorkerService\BIA.Net.Core.WorkerService.csproj" PrivateAssets="all" />
		<ProjectReference Include="..\BIA.Net.Core.Test\BIA.Net.Core.Test.csproj" PrivateAssets="all" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Audit.EntityFramework.Abstractions" />
		<PackageReference Include="Audit.EntityFramework.Core" />
		<PackageReference Include="Audit.NET.SqlServer" />
		<PackageReference Include="Azure.Identity" />
		<PackageReference Include="Bonura.Hangfire.PerformContextAccessor" />
		<PackageReference Include="Hangfire" />
		<PackageReference Include="Hangfire.PostgreSql" />
		<PackageReference Include="MailKit" />
		<PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" />
		<PackageReference Include="Microsoft.AspNetCore.Authentication.Negotiate" />
		<PackageReference Include="Microsoft.AspNetCore.OpenApi" />
		<PackageReference Include="Microsoft.AspNetCore.SignalR.Client" />
		<PackageReference Include="Microsoft.AspNetCore.SignalR.Common" />
		<PackageReference Include="Microsoft.AspNetCore.SignalR.StackExchangeRedis" />
		<PackageReference Include="Microsoft.Data.SqlClient" />
		<PackageReference Include="Microsoft.EntityFrameworkCore" />
		<PackageReference Include="Microsoft.EntityFrameworkCore.InMemory" />
		<PackageReference Include="Microsoft.EntityFrameworkCore.Relational" />
		<PackageReference Include="Microsoft.Extensions.Caching.SqlServer" />
		<PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" />
		<PackageReference Include="Microsoft.Extensions.Configuration.Binder" />
		<PackageReference Include="Microsoft.Extensions.Logging.Abstractions" />
		<PackageReference Include="Microsoft.Extensions.Options" />
		<PackageReference Include="Microsoft.Identity.Client" />
		<PackageReference Include="Moq" />
		<PackageReference Include="MSTest.TestFramework" />
		<PackageReference Include="Newtonsoft.Json" />
		<PackageReference Include="NodaTime" />
		<PackageReference Include="Npgsql.EntityFrameworkCore.PostgreSQL" />
		<PackageReference Include="Swashbuckle.AspNetCore.SwaggerUI" />
		<PackageReference Include="System.Configuration.ConfigurationManager" />
		<PackageReference Include="System.DirectoryServices" />
		<PackageReference Include="System.DirectoryServices.AccountManagement" />
		<PackageReference Include="System.Drawing.Common" />
		<PackageReference Include="System.IdentityModel.Tokens.Jwt" />
	</ItemGroup>

	<ItemGroup>
		<None Include="..\Images\LogoBIA.png">
			<Pack>True</Pack>
			<PackagePath></PackagePath>
		</None>
	</ItemGroup>

	<Target Name="_AddReferencedProjectOutputs" DependsOnTargets="ResolveReferences">
		<ItemGroup>
			<TfmSpecificPackageFile Include="@(ReferenceCopyLocalPaths)" Condition="'%(ReferenceCopyLocalPaths.ReferenceSourceTarget)' == 'ProjectReference'">
				<PackagePath>lib\$(TargetFramework)\</PackagePath>
			</TfmSpecificPackageFile>
		</ItemGroup>
	</Target>

	<Target Name="PreBuild" BeforeTargets="PreBuildEvent">
	</Target>

</Project>
